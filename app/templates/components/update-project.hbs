{{#if updateProjectForm}}
  <form>
    <div class="form-group">
      <label for="title">Title: </label>
      {{input value=project.title}}
    </div>
    <div class="form-group">
      <label for="details">Details: </label>
      {{input value=project.details}}
    </div>
    <div class="form-group">
      <label for="technologies">Technologies Used: </label>
      {{input value=project.technologies}}
    </div>
    <div class="form-group">
      <label for="image">Image URL: </label>
      {{input value=project.image}}
    </div>
    <button {{action 'updateProject' project}}>Save</button>
  </form>
  <button {{action 'toggleDetail'}}>Cancel</button>
{{else}}
  <button {{action 'toggleDetail'}}>Edit Project</button>
{{/if}}
